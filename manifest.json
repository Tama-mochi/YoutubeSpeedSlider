{
    "manifest_version": 3,
    "name": "YouTube Speed Slider",
    "version": "1.3",
    "description": "Adds a playback speed slider on the YouTube player, allowing speed adjustment from 0.1× to 5.0×.",
    "permissions": ["storage"],
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "icons": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }